<% provide(:title, 'Edit Contract Settings') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Contract') %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for @agma_contract, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<div class="mash-show-tab">
		<%= render 'agma_contracts/tabs' %>
		<%= render 'form', :f => f %>
	</div>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Update' %>
	<% end %>
<% end %>