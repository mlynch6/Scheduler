<% provide(:title, 'Edit Contract Settings') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Contract') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Contract Settings
       <small>Edit</small>
     </h1>
  </div>
  <%= render 'agma_contracts/tools_menu' %>
</div>

<div class="row mash-show">
	<%= render 'agma_contracts/tabs' %>
  
  <div class="mash-body">
    <%= form_for @agma_contract, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
    	<%= f.error_messages %>
    		<%= render 'form', :f => f %>
	
    	<%= f.submit_group do %>
    		<%= f.submit_primary 'Update' %>
        <%= link_to 'Cancel', agma_contract_path(AgmaContract.first), class: 'btn btn-link' %>
    	<% end %>
    <% end %>
  </div>
</div>
