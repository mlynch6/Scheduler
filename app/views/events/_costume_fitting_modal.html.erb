<div class="modal fade" id="modal_<%= appt.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel_<%= appt.id %>" aria-hidden="true">
<div class="modal-dialog">
<div class="modal-content">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 class="modal-title" id="modalLabel_<%= appt.id %>">
			<%= appt.title %>
			<small>Costume Fitting</small>
		</h3>
	</div>
	
	<div class="modal-body">
		<%= render 'costume_fittings/detail', fitting: appt %>
	</div>
	
	<div class="modal-footer">
		<% if allow? "costume_fittings", "edit" %>
			<%= edit_button "Edit", edit_costume_fitting_path(appt) %>
		<% end %>
	</div>

</div> <!-- modal-content -->
</div> <!-- modal-dialog -->
</div> <!-- modal -->