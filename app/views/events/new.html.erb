<% type = (@event.event_type || 'Event').underscore.humanize.titleize %>
<% provide(:title, "New #{type}") %>
<% provide(:header_current, 'Calendar') %>
<% provide(:sidebar_current, "New #{type}") %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for @event, as: :event, builder: BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<%= render 'form', :f => f %>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Create' %>
	<% end %>
<% end %>