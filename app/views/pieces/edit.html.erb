<% provide(:title, 'Edit Piece') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="page-header">
  <h1>Pieces
    <small>Edit</small>
    <div class="pull-right">
      <%= delete_button 'Delete', @piece, class: 'btn btn-danger', title: 'Delete Piece' if can? :destroy, @piece %>
    </div>
  </h1>
</div>

<div class="row mash-show">
	<%= render 'pieces/tabs' %>
	
	<div class="mash-body">
    <%= simple_form_for @piece do |f| %>
    	<%= show_error_messages @piece %>
    	<%= render 'form', :f => f %>
	
      <%= form_actions do %>
        <%= f.button :submit %>
        <%= link_to 'Cancel', piece_path(@piece), class: 'btn btn-link' if can? :read, @piece %>
      <% end %>
    <% end %>
  </div>
</div>