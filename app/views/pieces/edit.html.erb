<% provide(:title, 'Edit Piece') %>
<h1>Edit Piece</h1>

<div class="row-fluid">
	<div class="span9"> <!-- body content -->
		<%= form_for @piece, :html => { :class => 'form-horizontal' } do |f| %>
			<%= render :partial => 'form', :locals => { :f => f } %>
			
			<div class="control-group">
				<%= f.label :active, "Status", :class => 'control-label' %>
				<div class="controls">
					<%= f.select :active, { 'Active' => true, 'Inactive' => false } %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit 'Save', :class => 'btn btn-primary' %>
				</div>
			</div>
		<% end %>
	</div> <!-- end body content -->
	
	<div class="span3"> <!-- sidebar -->
		<div class="well well-small">
			<h4>Actions</h4>
			<i class="icon-list"></i> <%= link_to "All Pieces", pieces_path %>
		</div>
	</div> <!-- end sidebar -->
</div>