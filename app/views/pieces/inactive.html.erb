<% provide(:title, 'Inactive Pieces') %>
<% provide(:header_current, 'Scheduling') %>

<h1>Inactive Pieces</h1>

<div class="row">	
	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Name</th>
	  		<th style="width:70px;">&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @pieces.each do |piece| %>
				<tr>
					<td><%= piece.name %></td>
					<td>
						<% if allow? "pieces", "activate" %>
							<%= activate_button nil, activate_piece_path(piece), :class => 'btn-small', :id => "activate_#{piece.id}" %>
						<% end %>
						<% if allow? "pieces", "destroy" %>
							<%= delete_button nil, piece, :class => 'btn-small', :id => "delete_#{piece.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row">
		<div class="span10 offset2">
			<%= will_paginate(class: 'pagination',
						previous_label: "&laquo;",
			    	next_label: "&raquo;"
					)%>
		</div>
	</div>
	
	<% unless @pieces.length > 0 %>
		<div class="alert">No pieces are inactive.</div>
	<% end %>
</div>