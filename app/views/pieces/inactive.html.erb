<% provide(:title, 'Inactive Pieces') %>
<h1>Inactive Pieces</h1>

<%= render 'filter', :status => "inactive" %>

<table class="table table-striped">
	<thead>
  	<tr>
  		<th>Name</th>
  		<th>&nbsp;</th>
  	</tr>
  </thead>
  <tbody>
  	<% @pieces.each do |piece| %>
			<tr>
				<td><%= piece.name %></td>
				<td>
					<% if allow? "pieces", "activate" %>
						<%= link_to 'Activate', activate_piece_path(piece), :class => 'btn btn-mini btn-success', :id => "activate_#{piece.id}" %>
					<% end %>
					<% if allow? "pieces", "destroy" %>
						<%= link_to 'Delete', piece, method: :delete, confirm: "Delete?", :class => 'btn btn-mini btn-danger', :id => "delete_#{piece.id}" %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% unless @pieces.length > 0 %>
	<div class="alert">No records found</div>
<% end %>

<div class="row">
	<div class="span10 offset2">
		<%= will_paginate(class: 'pagination',
					previous_label: "&laquo;",
		    	next_label: "&raquo;"
				)%>
	</div>
</div>