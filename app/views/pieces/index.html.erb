<% provide(:title, 'All Pieces') %>
<h1>All Pieces</h1>

<table class="table table-striped">
	<thead>
  	<tr>
  		<th>Name</th>
  		<th>Status</th>
  		<th>Actions</th>
  	</tr>
  </thead>
  <tbody>
  	<% @pieces.each do |piece| %>
			<tr>
				<td><%= link_to piece.name, piece_scenes_path(piece) %></td>
				<td><%= active_bool_to_text(piece.active) %></td>
				<td>
					<%= link_to 'Edit', edit_piece_path(piece), :class => 'btn btn-mini' %>
					&nbsp;
					<%= link_to 'Delete', piece, method: :delete, confirm: "Delete?", :class => 'btn btn-mini btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% unless @pieces.length > 0 %>
	<div class="alert">No records found</div>
<% end %>

<%= will_paginate %>
<%= link_to 'New', new_piece_path, :class => 'btn btn-mini btn-primary' %>