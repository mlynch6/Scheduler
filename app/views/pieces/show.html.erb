<% provide(:title, @piece.name) %>
<h1><%= @piece.name %></h1>

<div class="row-fluid">
	<div class="span9"> <!-- body content -->
		<dl class="dl-horizontal">
			<dt>Name</dt>
			<dd><%= @piece.name %></dd>
		
			<dt>Status</dt>
			<dd><%= active_bool_to_text(@piece.active) %></dd>
		</dl>
	</div> <!-- end body content -->
	
	<div class="span3"> <!-- sidebar -->
		<div class="well well-small">
			<h4>Actions</h4>
			<ul class="unstyled">
				<li><i class="icon-pencil"></i> <%= link_to "Edit", edit_piece_path(@piece) %></li>
				<li><i class="icon-list"></i> <%= link_to "All Pieces", pieces_path %></li>
			</ul>
		</div>
	</div> <!-- end sidebar -->
</div>