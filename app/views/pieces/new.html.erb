<% provide(:title, 'Add Piece') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for @piece, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<%= render 'form', :f => f %>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Create' %>
	<% end %>
<% end %>