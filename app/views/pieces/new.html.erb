<% provide(:title, 'Add Piece') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="page-header">
  <h1>Pieces
    <small>Add</small>
  </h1>
</div>

<div class="row">
  <%= simple_form_for @piece do |f| %>
  	<%= show_error_messages @piece %>
  	<%= render 'form', :f => f %>
	  
    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', pieces_path, class: 'btn btn-link' if can? :read, @piece %>
    <% end %>
  <% end %>
</div>