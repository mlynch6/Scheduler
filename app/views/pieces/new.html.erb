<% provide(:title, 'Add Piece') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Pieces
      <small>Add</small>
    </h1>
  </div>
  <%= render 'pieces/tools_menu' %>
</div>

<div class="row">
  <%= simple_form_for @piece do |f| %>
  	<%= show_error_messages @piece %>
  	<%= render 'form', :f => f %>
	  
    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', pieces_path, class: 'btn btn-link' %>
    <% end %>
  <% end %>
</div>