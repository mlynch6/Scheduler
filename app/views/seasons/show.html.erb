<% provide(:title, "#{@season.name}") %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Seasons') %>

<div class="page-header">
  <h1><%= @season.name %></h1>
</div>

<div class="row mash-show">
	<%= render 'seasons/tabs' %>
	
	<div class="tab-content mash-body">
    <div class="tab-pane active" id="overview">
		  <%= render 'seasons/detail' %>
    </div>
    
    <div class="tab-pane" id="pieces">
    	<% if @season_pieces.length > 0 %>
    		<%= render 'seasons/pieces_table' %>
    	<% else %>
    		<div class="panel-body">
    	    <p>No pieces found.</p>
    	  </div>
    	<% end %>
    </div>
	</div>
</div>