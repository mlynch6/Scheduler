<% provide(:title, 'Edit Season') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Seasons') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>
      Seasons
      <small>Edit</small>
    </h1>
  </div>
  <%= render 'seasons/tools_menu' %>
</div>

<div class="row">
  <%= form_for @season, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
  	<%= f.error_messages %>
  	<%= render 'form', :f => f %>
	
  	<%= f.submit_group do %>
  		<%= f.submit_primary 'Update' %>
      <%= link_to 'Cancel', season_path(@season), class: 'btn btn-link' %>
  	<% end %>
  <% end %>
</div>