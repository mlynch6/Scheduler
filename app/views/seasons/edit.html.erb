<% provide(:title, 'Edit Season') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Seasons') %>

<div class="page-header">
  <h1>Seasons
    <small>Edit</small>
    <div class="pull-right">
      <%= delete_button 'Delete', @season, title: 'Delete Season', class: 'btn btn-danger' if can? :destroy, @season %>
    </div>
  </h1>
</div>

<div class="row">
  <%= simple_form_for @season do |f| %>
  	<%= show_error_messages @season %>
  	<%= render 'form', :f => f %>
	  
    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', season_path(@season), class: 'btn btn-link' if can? :read, @season %>
    <% end %>
  <% end %>
</div>