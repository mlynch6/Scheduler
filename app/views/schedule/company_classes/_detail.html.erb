<div class="dtl-form">
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CompanyClass.human_attribute_name(:title) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.title %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= CompanyClass.human_attribute_name(:location) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.location.name %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CompanyClass.human_attribute_name(:comment) %></div>
		<div class="dtl-text col-sm-10 col-md-10"><%= simple_format(@company_class.comment) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2">Dates</div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.date_range %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2">Time</div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.time_range %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= CompanyClass.human_attribute_name(:duration) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.duration %> minutes</div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2">Days of Week</div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @company_class.days_of_week %></div>
	</div>
</div>