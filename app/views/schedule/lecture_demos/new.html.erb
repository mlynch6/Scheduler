<% provide(:title, 'Add Lecture Demonstration') %>
<% provide(:header_current, 'Calendar') %>
<% provide(:sidebar_current, 'Lecture Demos') %>

<div class="page-header">
  <h1>Lecture Demonstrations
    <small>Add</small>
  </h1>
</div>

<div class="row">
  <%= simple_form_for @lecture_demo_form, url: schedule_lecture_demos_path do |f| %>
  	<%= show_error_messages @lecture_demo_form %>
    <%= render 'form', :f => f %>
    <%= render 'schedule/invitees/form', :f => f %>

    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', schedule_lecture_demos_path, class: 'btn btn-link' if can? :read, LectureDemo %>
    <% end %>
  <% end %>
</div>