<% provide(:title, 'Edit Costume Fitting') %>
<% provide(:header_current, 'Calendar') %>
<% provide(:sidebar_current, 'Costume Fittings') %>

<div class="page-header">
  <h1>Costume Fittings
    <small>Edit</small>
  </h1>
</div>

<div class="row">
  <%= simple_form_for @costume_fitting_form, url: schedule_costume_fitting_path(@costume_fitting), method: :put do |f| %>
  	<%= show_error_messages @costume_fitting_form %>
    <%= render 'form', :f => f %>

    <%= form_actions do %>
      <%= f.submit 'Update Costume Fitting', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', schedule_costume_fittings_path, class: 'btn btn-link' if can? :read, CostumeFitting %>
    <% end %>
  <% end %>
</div>