<div class="dtl-form">
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CostumeFitting.human_attribute_name(:title) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @costume_fitting.title %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= CostumeFitting.human_attribute_name(:location) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= name_or_tbd(@costume_fitting.location) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CostumeFitting.human_attribute_name(:comment) %></div>
		<div class="dtl-text col-sm-10 col-md-10"><%= simple_format(@costume_fitting.comment) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CostumeFitting.human_attribute_name(:start_date) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @costume_fitting.start_date(:date_words) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= CostumeFitting.human_attribute_name(:start_time) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @costume_fitting.time_range %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= CompanyClass.human_attribute_name(:duration) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= min_to_words(@costume_fitting.duration) %></div>
	</div>
</div>