<% provide :title, "#{@costume_fitting.title} | Edit Invitees" %>
<% provide(:header_current, 'Calendar') %>
<% provide(:sidebar_current, 'Costume Fittings') %>

<% content_for :page_header do %>
  <%= @costume_fitting.title %>
  <small>Edit Invitees</small>
<% end %>

<% content_for :tabs do %>
	<%= render 'schedule/costume_fittings/tabs' %>
<% end %>

<%= simple_form_for @costume_fitting, url: invitees_schedule_costume_fitting_path(@costume_fitting), method: :put do |f| %>
	<%= show_error_messages @costume_fitting %>
  <%= render 'schedule/invitees/form', :f => f %>

  <%= form_actions do %>
    <%= f.submit 'Update Invitees', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', invitees_schedule_costume_fitting_path(@costume_fitting), class: 'btn btn-link' if can? :read, CostumeFitting %>
  <% end %>
<% end %>