<% provide :title, 'Edit Rehearsal' %>
<% provide :header_current, 'Calendar' %>
<% provide :sidebar_current, 'Rehearsals' %>

<% content_for :page_header do %>
  Rehearsals
  <small>Edit</small>
<% end %>

<% content_for :tabs do %>
	<%= render 'schedule/rehearsals/tabs' %>
<% end %>

<%= simple_form_for @rehearsal_form, url: schedule_rehearsal_path(@rehearsal), method: :put do |f| %>
  <%= show_error_messages @rehearsal_form %>
  <%= render 'form', :f => f %>

  <%= form_actions do %>
    <%= f.submit 'Update Rehearsal', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', schedule_rehearsal_path(@rehearsal), class: 'btn btn-link' if can? :read, @rehearsal %>
  <% end %>
<% end %>