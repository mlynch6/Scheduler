<% provide :title, "#{@rehearsal.title} | Edit Invitees" %>
<% provide :header_current, 'Calendar' %>
<% provide :sidebar_current, 'Rehearsals' %>

<% content_for :page_header do %>
  <%= @rehearsal.title %>
  <small>Edit Invitees</small>
<% end %>

<% content_for :tabs do %>
	<%= render 'schedule/rehearsals/tabs' %>
<% end %>

<%= simple_form_for @rehearsal, url: invitees_schedule_rehearsal_path(@rehearsal), method: :put do |f| %>
	<%= show_error_messages @rehearsal %>
  
  <%= render 'schedule/invitees/musician_form', :f => f %>
  <%= render 'schedule/invitees/artist_form', :f => f %>

  <%= form_actions do %>
    <%= f.submit 'Update Invitees', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', invitees_schedule_rehearsal_path(@rehearsal), class: 'btn btn-link' if can? :read, @rehearsal %>
  <% end %>
<% end %>