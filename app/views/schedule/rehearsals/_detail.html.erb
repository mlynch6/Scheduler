<div class="dtl-form">
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:title) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.title %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:location) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= name_or_tbd(@rehearsal.location) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:piece) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.piece.name %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:scene) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.scene.name if @rehearsal.scene %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:comment) %></div>
		<div class="dtl-text col-sm-10 col-md-10"><%= simple_format(@rehearsal.comment) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:start_date) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.start_date(:date_words) %></div>
	</div>
  
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:start_time) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.time_range %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:duration) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= min_to_words(@rehearsal.duration) %></div>
	</div>
  
<% if @rehearsal.break_time_range.present? %>
	<div class="row">
		<div class="dtl-label col-sm-2 col-md-2">Break</div>
		<div class="dtl-text col-sm-4 col-md-4"><%= @rehearsal.break_time_range %></div>
    
		<div class="dtl-label col-sm-2 col-md-2"><%= Rehearsal.human_attribute_name(:break_duration) %></div>
		<div class="dtl-text col-sm-4 col-md-4"><%= min_to_words(@rehearsal.break_duration) %></div>
	</div>
<% end %>
</div>