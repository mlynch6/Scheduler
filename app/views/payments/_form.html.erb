<% if account.stripe_card_token.present? %>
	<p>Credit Card has been provided</p>
<% else %>
	<div id="stripe_error" class="alert alert-danger">
		<noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings, then try again.</noscript>
	</div>

	<div class="form-group">
		<%= f.generate_label :accepted_cards, text: "Accepted Cards" %>
		<div class="col-md-9">
			<%= image_tag('visa.png') %>
			<%= image_tag('mastercard.png') %>
			<%= image_tag('discover.png') %>
			<%= image_tag('american_express.png') %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.generate_label :card_number, for: "card_number", text: "Credit Card #", class: 'required' %>
		<div class="col-md-5">
			<%= text_field_tag :card_number, nil, name: nil, class: 'form-control' %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.generate_label :card_month, text: "Credit Expiration", class: 'required' %>
		<div class="col-md-3">
			<%= select_month nil, { add_month_numbers: true }, { name: nil, id: "card_month", class: "form-control" } %>
		</div>
		<div class="col-md-2">
			<%= select_year nil, { start_year: Date.today.year, end_year: Date.today.year+5 }, { name: nil, id: "card_year", class: "form-control" } %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.generate_label :card_code, for: "card_code", text: "Security Code", class: 'required' %>
		<div class="col-md-2">
			<%= text_field_tag :card_code, nil, name: nil, class: "form-control" %>
		</div>
		<%= image_tag('cvv.png') %>
	</div>
<% end %>

<%= f.hidden_field :stripe_card_token %>