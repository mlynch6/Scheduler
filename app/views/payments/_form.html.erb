<% if account.stripe_card_token.present? %>
	<p>Credit Card has been provided</p>
<% else %>
	<div id="stripe_error" class="alert alert-danger">
		<noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings, then try again.</noscript>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3 col-md-3" for="card_number">Accepted Cards</label>
		<div class="col-sm-6 col-md-6">
			<%= image_tag('visa.png') %>
			<%= image_tag('mastercard.png') %>
			<%= image_tag('american_express.png') %>
      <%= image_tag('discover.png') %>
		</div>
	</div>
  
  <div class="form-group">
    <label class="control-label required col-sm-3 col-md-3" for="card_number">Credit Card #</label>
    <div class="col-sm-5 col-md-5">
	    <%= text_field_tag :card_number, nil, class: 'form-control', name: nil %>
    </div>
  </div>
	
	<div class="form-group">
		<label class="control-label required col-sm-3 col-md-3" for="card_month">Expiration</label>
		<div class="col-sm-3 col-md-3">
      <%= select_tag :card_month, options_for_select(Lovs::CC_MONTHS), class: 'form-control', name: nil %>
		</div>
		<div class="col-sm-2 col-md-2">
      <%= select_tag :card_year, options_for_select(Date.today.year..Date.today.year+4), class: 'form-control', name: nil %>
		</div>
	</div>
	
	<div class="form-group">
		<label class="control-label required col-sm-3 col-md-3" for="card_code">Security Code</label>
		<div class="col-sm-2 col-md-1">
      <%= text_field_tag :card_code, nil, class: 'form-control', name: nil %>
		</div>
    <div class="col-sm-1 col-md-1">
      <%= image_tag('cvv.png') %>
    </div>
	</div>
<% end %>

<%= f.hidden_field :stripe_card_token %>