<% provide(:title, 'Account | Change Payment Method') %>
<% provide(:header_current, 'Home') %>
<% provide(:sidebar_current, 'Account') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Account
       <small>Change Payment Method</small>
     </h1>
  </div>
  <%= render 'accounts/tools_menu' %>
</div>

<div class="row mash-show">
	<%= render 'accounts/tabs' %>
	
	<div class="mash-body">
    <p class="muted">Fill out the form below to change your subscription credit card.</p>

    <%= simple_form_for @account, :url => payments_update_path, :as => 'payment', :html => { :id => 'edit_payment' } do |f| %>
    	<%= show_error_messages @account %>
    	<%= render 'form', :f => f, account: @account %>
		
      <%= form_actions do %>
        <%= f.submit 'Update Payment', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', subscriptions_current_path, class: 'btn btn-link' %>
    	<% end %>
    <% end %>
  </div>
</div>