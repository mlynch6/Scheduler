<div class="dtl-form">
	<h2>Rehearsal Week</h2>
	
	<div class="row">
		<div class="dtl-label col-md-3"><%= AgmaProfile.human_attribute_name(:rehearsal_start_min) %></div>
		<div class="dtl-text col-md-9"><%= @agma_profile.rehearsal_start_time %></div>
	</div>
	
	<div class="row">
		<div class="dtl-label col-md-3"><%= AgmaProfile.human_attribute_name(:rehearsal_end_min) %></div>
		<div class="dtl-text col-md-9"><%= @agma_profile.rehearsal_end_time %></div>
	</div>
	
	<div class="row">
		<div class="dtl-label col-md-3"><%= AgmaProfile.human_attribute_name(:rehearsal_max_hrs_per_week) %></div>
		<div class="dtl-text col-md-9"><%= @agma_profile.rehearsal_max_hrs_per_week %> hours/week</div>
	</div>

	<div class="row">
		<div class="dtl-label col-md-3"><%= AgmaProfile.human_attribute_name(:rehearsal_max_hrs_per_day) %></div>
		<div class="dtl-text col-md-9"><%= @agma_profile.rehearsal_max_hrs_per_day %> hours/day</div>
	</div>
	
	<div class="row">
		<div class="dtl-label col-md-3"><%= AgmaProfile.human_attribute_name(:rehearsal_increment_min) %></div>
		<div class="dtl-text col-md-9"><%= @agma_profile.rehearsal_increment_min %> minutes</div>
	</div>
</div>

<div class="dtl-form">
	<h2>Breaks</h2>
	
