<%= f.select :rehearsal_start_time, @times, {}, { :class => 'input-small', 
				:help_text =>'Class & Rehearsals will start no earlier than this' } %>
<%= f.select :rehearsal_end_time, @times, {}, { :class => 'input-small',
				:help_text => 'Class & Rehearsals will end no later than this' } %>
<%= f.text_w_add_on :rehearsal_max_hrs_per_week, {
				:class => 'input-mini',
				:add_on => 'hours/week',
				:help_text => 'Maximum hours an Artist may be called upon to rehearse in a week' } %>
<%= f.text_w_add_on :rehearsal_max_hrs_per_day, {
				:class => 'input-mini',
				:add_on => 'hours/day',
				:help_text => 'Maximum hours an Artist may be called upon to rehearse in a day' } %>
<%= f.text_w_add_on :rehearsal_increment_min, {
				:class => 'input-mini',
				:add_on => 'min',
				:help_text => 'Increment in which a Rehearsal can be called and counted' } %>

<legend>Breaks</legend>
<%= f.text_w_add_on :class_break_min, {
				:class => 'input-mini',
				:add_on => 'min',
				:help_text => 'Amount of break time following the end of class and the first rehearsal' } %>
<%= f.text_w_add_on :rehearsal_break_min_per_hr, {
				:class => 'input-mini',
				:add_on => 'min/Hour Rehearsal',
				:help_text => 'Amount of break time during each hour of rehearsal' } %>

<legend>Costume Fittings</legend>			
<%= f.text_w_add_on :costume_increment_min, {
				:class => 'input-mini',
				:add_on => 'min',
				:help_text => 'Increment in which a Costume Fitting can be called and counted' } %>