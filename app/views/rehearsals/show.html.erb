<% provide(:title, 'Rehearsal') %>
<h1><%= @rehearsal.title %></h1>

<div class="show-ui">
	<div class="row">
		<div class="label-ui span2">Location</div>
		<div class="text-ui span4"><%= @rehearsal.location.name %></div>
	</div>
	
	<div class="row">
		<div class="label-ui span2">Date</div>
		<div class="text-ui span4"><%= @rehearsal.start_date %></div>
	</div>
	
	<div class="row">
		<div class="label-ui span2">Time</div>
		<div class="text-ui span4"><%= @rehearsal.start_time %> to <%= @rehearsal.end_time %></div>
	</div>
	
	<div class="row">
		<div class="label-ui span2">Piece</div>
		<div class="text-ui span4"><%= @rehearsal.piece.name %></div>
	</div>
	
	<div class="row">
		<div class="label-ui span2">Invitees</div>
		<div class="text-ui span8">
			<ul class="unstyled">
				<% @rehearsal.employees.each do |employee| %>
					<li><%= employee.full_name %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>