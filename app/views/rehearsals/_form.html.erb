<div class="control-group required">
	<%= f.label :title, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_field :title %>
	</div>
</div>

<div class="control-group required">
	<%= f.label :location_id, :class => 'control-label' %>
	<div class="controls">
		<%= f.select :location_id, @locations, { :include_blank => true } %>
	</div>
</div>

<div class="control-group required">
	<%= f.label :start_date, :class => 'control-label' %>
	<div class="controls">
		<div class="input-append">
			<%= f.text_field :start_date, :class => 'input-small', :placeholder => 'mm/dd/yyyy' %>
			<span class="add-on"><i class="icon-calendar"></i></span>
		</div>
	</div>
</div>

<div class="control-group required">
	<%= f.label :start_time, 'From', :class => 'control-label' %>
	<div class="controls">
		<div class="input-append">
			<%= f.text_field :start_time, :class => 'input-mini' %>
			<span class="add-on"><i class="icon-time"></i></span>
		</div>
	</div>
</div>

<div class="control-group required">
	<%= f.label :start_time, 'To', :class => 'control-label' %>
	<div class="controls">
		<div class="input-append">
			<%= f.text_field :end_time, :class => 'input-mini' %>
			<span class="add-on"><i class="icon-time"></i></span>
			<span class="help-inline">Inline help text</span>
		</div>
	</div>
</div>

<div class="control-group required">
	<%= f.label :piece_id, :class => 'control-label' %>
	<div class="controls">
		<%= f.select :piece_id, @pieces, { :include_blank => true } %>
	</div>
</div>

<div class="control-group">
	<%= f.label :employee_ids, 'Invitees', :class => 'control-label' %>
	<div class="controls">
		<div class="input-prepend">
			<%= f.select :employee_ids, @employees, {}, { :multiple => true, :class => 'input-xxlarge' } %>
		</div>
	</div>
</div>