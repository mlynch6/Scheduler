<%= form_for [@piece, @scene], :html => { :class => 'form-horizontal' } do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<fieldset>
		<legend><%= 'New' %> Scene</legend>
		<div class="control-group">
			<%= f.label :name, :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :order_num, "Order", :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :order_num, :class => 'input-mini' %>
			</div>
		</div>
	</fieldset>

	<div class="form-actions">
		<%= f.submit action_text, :class => 'btn btn-primary' %>
	</div>
<% end %>