<% provide(:title, "#{@piece.name} | Scenes") %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>
      <%= @piece.name %>
      <small>Scenes</small>
    </h1>
  </div>
  <%= render 'pieces/tools_menu' %>
</div>

<div class="row mash-show">
	<%= render 'pieces/tabs' %>
	
	<div class="mash-body">
		<% if @scenes.length > 0 %>
			<table class="table table-striped">
				<thead>
			  	<tr>
            <th class="mash-col-1-btn">&nbsp;</th>
			  		<th>Scene</th>
			  		<th>Characters</th>
			  		<th>Track</th>
			  		<th class="mash-col-1-btn">&nbsp;</th>
			  	</tr>
			  </thead>
			  <tbody id="scenes" class="position-sort" data-update-url="<%= sort_scenes_url %>">
			  	<% @scenes.each do |scene| %>
						<%= content_tag_for :tr, scene do %>
							<td class="mash-col-1-btn">
								<% if allow? "scenes", "sort" %>
									<%= content_tag :span, nil, class: 'handle glyphicon glyphicon-resize-vertical', title: 'Drag to reorder' %>
								<% end %>
							</td>
              <td>
								<% if allow? "scenes", "edit" %>
									<%= link_to scene.name, edit_scene_path(scene), :id => "edit_#{scene.id}" %>
                <% else %>
                  <%= scene.name %>
								<% end %>
              </td>
							<td><%= scene.characters.map { |char| char.name }.join(", ") %></td>
							<td><%= scene.track %></td>
							<td class="mash-col-1-btn">
								<% if allow? "scenes", "destroy" %>
									<%= delete_button nil, scene, :class => 'btn-xs', :id => "delete_#{scene.id}" %>
								<% end %>
							</td>
						<% end %>
					<% end %>
				</tbody>
			</table>
			
		<% else %>
			<p>There are currently no scenes for this piece.
			</p>
			<p>To begin, click the <em class="text-info">Add Scene</em> link above.</p>
		<% end %>
	</div>
</div>