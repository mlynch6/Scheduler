<% provide(:title, "#{@piece.name} | Add Scene") %>
<% provide(:header_current, 'Scheduling') %>
<% provide(:current, 'AddScene') %>

<h1>Add Scene for <%= @piece.name %></h1>

<div class="span9">
	<%= form_for [@piece, @scene], :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.error_messages %>
		<%= render 'form', :f => f %>
		<%= f.submit 'Create', :class => 'btn btn-primary' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>