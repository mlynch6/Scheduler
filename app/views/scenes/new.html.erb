<% provide(:title, "#{@piece.name} | Add Scene") %>
<% provide(:header_current, 'Scheduling') %>
<% provide(:current, 'AddScene') %>

<h1>Add Scene for <%= @piece.name %></h1>

<div class="span9">
	<%= form_for [@piece, @scene], :html => { :class => 'form-horizontal' } do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
		
		<%= render 'form', :f => f %>
		<%= render 'shared/form_submit', :f => f, :action_text => 'Create' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>