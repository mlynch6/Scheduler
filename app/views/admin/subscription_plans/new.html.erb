<% provide(:title, 'Add Subscription Plan') %>
<% provide(:header_current, 'Administration') %>

<h1>Add Subscription Plan</h1>

<div class="row">
	<%= form_for @plan, :url => admin_subscription_plans_path, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.error_messages %>
		<%= render 'form', :f => f %>
		<%= f.submit 'Create', :class => 'btn btn-primary' %>
	<% end %>
</div>