<% provide(:title, 'Subscription Plans') %>
<% provide(:header_current, 'Adinistration') %>

<h1>Subscription Plans</h1>

<div class="row">
	<div class="row text-center">
		<% if allow? "subscription_plans", "new" %>
			<%= new_button "Add Subscription Plan", new_admin_subscription_plan_path %>
		<% end %>
	</div>

	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Name</th>
	  		<th>Amount</th>
	  		<th style="width:140px;">&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @plans.each do |plan| %>
				<tr>
					<td><%= plan.name %></td>
					<td><%= number_to_currency(plan.amount) %></td>
					<td>
						<% if allow? "subscription_plans", "edit" %>
							<%= edit_button nil, edit_admin_subscription_plan_path(plan), :class => 'btn-small', :id => "edit_#{plan.id}" %>
						<% end %>
						<% if allow? "subscription_plans", "destroy" %>
							<%= delete_button nil, admin_subscription_plan_path(plan), :class => 'btn-small', :id => "delete_#{plan.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<% unless @plans.length > 0 %>
		<div class="alert">No subscription plans were found. Click on 'Add Subscription Plan' to get started.</div>
	<% end %>
</div>