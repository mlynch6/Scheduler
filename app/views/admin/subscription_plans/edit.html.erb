<% provide(:title, 'Edit Subscription Plan') %>
<% provide(:header_current, 'Administration') %>
<% provide(:sidebar_current, 'Subscription Plans') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>
       Subscription Plans
       <small>Edit</small>
     </h1>
  </div>
  <%= render 'admin/subscription_plans/tools_menu' %>
</div>

<div class="row">
  <div class="alert alert-info">
    <%= content_tag(:span, nil, class: 'glyphicon glyphicon-exclamation-sign') %> <strong>Don't Forget!</strong>
    Update the Subscription Plan in the Stripe dashboard.
  </div>

  <%= form_for @plan, :url => admin_subscription_plan_path(@plan) ,:builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
  	<%= f.error_messages %>
  	<%= render 'form', :f => f %>
	
  	<%= f.submit_group do %>
  		<%= f.submit_primary 'Update' %>
      <%= link_to 'Cancel', admin_subscription_plans_path, class: 'btn btn-link' %>
  	<% end %>
  <% end %>
</div>