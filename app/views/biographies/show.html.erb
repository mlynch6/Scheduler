<% provide(:title, "#{@employee.full_name} | Biography") %>
<% provide(:header_current, 'People') %>
<% provide(:sidebar_current, 'Employees') %>

<% content_for :page_header do %>
  <%= @employee.full_name %>
  <small>Biography</small>
  <div class="pull-right">
    <%= edit_button 'Edit Biography', edit_employee_biography_path(@employee) if can? :update, :biography %>
  </div>
<% end %>

<% content_for :tabs do %>
	<%= render 'employees/tabs' %>
<% end %>

<%= simple_format(@employee.biography) if @employee.biography.present? %>