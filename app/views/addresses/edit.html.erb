<% provide(:title, 'Update Address') %>
<% provide(:header_current, 'Employees') if @address.addressable_type == "Employee" %>
<% provide(:header_current, 'Administration') if @address.addressable_type == "Account" %>
<% provide(:current, 'EditAddress') %>

<h1>Update Address</h1>

<div class="span9">
	<%= form_for [@addressable, @address], builder: BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.error_messages %>
		<%= render 'form', :f => f %>
		<%= f.submit 'Update', :class => 'btn btn-primary' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>