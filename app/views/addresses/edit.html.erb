<% provide(:title, 'Update Address') %>

<% if @address.addressable_type == "Employee" %>
	<% provide(:header_current, 'People') %>
	<% provide(:sidebar_current, 'Employees') %>
<% end %>

<% if @address.addressable_type == "Account" %>
	<% provide(:header_current, 'Setup') %>
	<% provide(:sidebar_current, 'Company Info') %>
<% end %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for [@addressable, @address], builder: BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<%= render 'form', :f => f %>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Update' %>
	<% end %>
<% end %>