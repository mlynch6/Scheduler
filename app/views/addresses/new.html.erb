<% provide(:title, 'Add Address') %>
<% provide(:header_current, 'Employees') if @address.addressable_type == "Employee" %>
<% provide(:header_current, 'Administration') if @address.addressable_type == "Account" %>
<% provide(:current, 'NewAddress') %>

<h1>Add Address</h1>

<div class="span9">
	<%= form_for [@addressable, @address], :html => { :class => 'form-horizontal' } do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
	
		<%= render 'form', :f => f %>
		<%= render 'shared/form_submit', :f => f, :action_text => 'Create' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>