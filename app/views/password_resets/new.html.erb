<% provide(:title, 'Reset Your Password') %>

<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<div class="row">
  <p>Enter your email address to have a password reset link sent to you.</p>
  
  <%= form_tag password_resets_path, :method => :post, :class => 'form-horizontal' do %>
  	<div class="form-group">
      <%= label_tag :email, nil, class: "col-md-3 control-label" %>
      <div class="col-md-5">
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
      </div>
    </div>
	
  	<div class="form-group">
      <div class="col-md-offset-3 col-md-9">
  		  <%= submit_tag 'Reset Password', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', login_path, class: 'btn btn-link' if can? :create, :session %>
      </div>
  	</div>
  <% end %>
</div>
