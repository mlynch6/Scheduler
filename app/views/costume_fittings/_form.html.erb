<%= f.text_field :title, 
			placeholder: 'Costume Fitting',
			help: content_tag(:span, 'Info', class: "label label-info")+" If you do not enter a title, 'Costume Fitting' will be used" %>
<%= f.select :location_id, @locations, { :include_blank => true } %>
<%= f.date_field :start_date %>
<%= f.time_field :start_time, :label => 'From' %>
<%= f.number_field :duration, append: 'min', field_size: 'col-md-3' %>
<%= f.select :employee_ids, @employees, {}, { :multiple => true } %>