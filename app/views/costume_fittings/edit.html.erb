<% provide(:title, 'Edit Costume Fitting') %>
<% provide(:header_current, 'Calendar') %>
<% provide(:sidebar_current, 'Daily') %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for @fitting, builder: BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<%= render 'form', :f => f %>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Update' %>
	<% end %>
<% end %>