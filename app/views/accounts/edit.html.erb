<% provide(:title, 'Edit Account') %>
<% provide(:header_current, 'Home') %>
<% provide(:sidebar_current, 'Account') %>

<div class="page-header">
  <h1>My Account
    <small>Edit</small>
  </h1>
</div>

<div class="row mash-show">
	<%= render 'accounts/tabs' %>
	
	<div class="mash-body">
    <%= simple_form_for @account do |f| %>
    	<%= show_error_messages @account %>
    	<%= render 'form', :f => f %>
	
      <%= form_actions do %>
        <%= f.button :submit %>
        <%= link_to 'Cancel', account_path(current_user.account_id), class: 'btn btn-link' if can? :read, current_user.account %>
    	<% end %>
    <% end %>
  </div>
</div>