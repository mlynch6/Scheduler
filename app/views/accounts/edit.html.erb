<% provide(:title, 'Edit Company Information') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Company Info') %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<%= form_for @account, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>
	<%= render 'form', :f => f %>
	
	<%= f.submit_group do %>
		<%= f.submit_primary 'Update' %>
	<% end %>
<% end %>