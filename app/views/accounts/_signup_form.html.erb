<fieldset>
	<legend>1. Company Information</legend>
  <%= f.input :name %>
  <%= f.input :time_zone %>
  <%= f.input :phone_num, as: :phone_prepend %>
</fieldset>

<fieldset>
	<legend>2. Business Address</legend>
  <%= f.input :addr %>
  <%= f.input :addr2 %>
  <%= f.input :city %>
  <%= f.input :state, wrapper: :horizontal_medium,
        collection: Address::STATES %>
  <%= f.input :zipcode, wrapper: :horizontal_small %>
</fieldset>

<fieldset>
  <legend>3. Director</legend>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :role, 
        collection: Employee::ROLES %>
  <%= f.input :email, as: :email_prepend %>
</fieldset>

<fieldset>
	<legend>4. Select a Username</legend>
  <%= f.input :username, wrapper: :horizontal_medium,
        hint: 'Must be between 6 and 20 characters' %>
  <%= f.input :password, as: :password_prepend %>
  <%= f.input :password_confirmation, as: :password_prepend %>
</fieldset>

<fieldset>
  <legend>5. Payment Information</legend>
  <%= f.hidden_field :current_subscription_plan_id,
        value: (params[:plan] || params[:account][:current_subscription_plan_id]) %>
  <%= render 'payments/form', :f => f, :account => @signup_form %>
</fieldset>