<% provide(:title, 'Company Information') %>
<% provide(:header_current, 'Administration') %>
<% provide(:current, 'Company') %>

<h1>Company Information</h1>

<div class="show-ui span9">
	<div class="row">
		<div class="label-ui span2"><%= Account.human_attribute_name(:name) %></div>
		<div class="text-ui span6"><%= @account.name %></div>
	</div>
	<div class="row">
		<div class="label-ui span2"><%= Account.human_attribute_name(:main_phone) %></div>
		<div class="text-ui span6"><%= @account.main_phone %></div>
	</div>
	<div class="row">
		<div class="label-ui span2"><%= Account.human_attribute_name(:time_zone) %></div>
		<div class="text-ui span6"><%= @account.time_zone %></div>
	</div>
	<% if allow? "accounts", "edit" %>
		<div class="row row-action">
			<div class="offset2">
				<%= link_to "Edit", edit_account_path(@account), :class => 'btn' %>
			</div>
		</div>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>