<% provide(:title, 'My Account') %>
<% provide(:header_current, 'Home') %>
<% provide(:sidebar_current, 'Account') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1><%= yield(:title) %></h1>
  </div>
  <%= render 'accounts/tools_menu' %>
</div>

<div class="row mash-show">
	<%= render 'accounts/tabs' %>
	
	<div class="mash-body">
		<%= render 'accounts/detail' %>
    
    <div class="row" style="margin-top:15px;">
    	<div class="col-md-offset-1 col-md-5">
        <%= render 'addresses/table', parent: @account, addresses: @account.addresses %>
    	</div>
	
    	<div class="col-md-5">
        <%= render 'phones/table', parent: @account, phones: @account.phones %>
    	</div>
    </div>
	</div>
</div>