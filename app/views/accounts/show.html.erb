<% provide(:title, 'Settings') %>
<h1>Settings</h1>
<div class="row">
	<div class="show-ui span8">
		<h2>Company Info</h2>
		<div class="row">
			<div class="label-ui span2"><%= Account.human_attribute_name(:name) %></div>
			<div class="text-ui span6"><%= @account.name %></div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= Account.human_attribute_name(:main_phone) %></div>
			<div class="text-ui span6"><%= @account.main_phone %></div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= Account.human_attribute_name(:time_zone) %></div>
			<div class="text-ui span6"><%= @account.time_zone %></div>
		</div>
		
		<h2>Rehearsal Weeks</h2>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:rehearsal_start) %></div>
			<div class="text-ui span6"><%= @account.agma_profile.rehearsal_start_time %></div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:rehearsal_end) %></div>
			<div class="text-ui span6"><%= @account.agma_profile.rehearsal_end_time %></div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:rehearsal_max_hrs_per_week) %></div>
			<div class="text-ui span6"><%= pluralize(@account.agma_profile.rehearsal_max_hrs_per_week, 'hour') %>/week</div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:rehearsal_max_hrs_per_day) %></div>
			<div class="text-ui span6"><%= pluralize(@account.agma_profile.rehearsal_max_hrs_per_day, 'hour') %>/day</div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:rehearsal_increment_min) %></div>
			<div class="text-ui span6"><%= pluralize(@account.agma_profile.rehearsal_increment_min, 'minute') %></div>
		</div>
		<div class="row">
			<div class="label-ui span2"><%= AgmaProfile.human_attribute_name(:class_break_min) %></div>
			<div class="text-ui span6"><%= pluralize(@account.agma_profile.class_break_min, 'minute') %></div>
		</div>
	</div>
	
	<div class="span4">
		<%= render 'accounts/nav_settings' %>
	</div>
</div>