<fieldset>
	<legend>2. Owner Information</legend>
	
	<div class="control-group required">
		<%= f.label :first_name, 'First Name', :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :first_name %>
		</div>
	</div>
		
	<div class="control-group required">
		<%= f.label :last_name, 'Last Name', :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :last_name %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :job_title, 'Job Title', :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :job_title %>
		</div>
	</div>
	
	<div class="control-group required">
		<%= f.label :email, :class => 'control-label' %>
		<div class="controls">
			<div class="input-prepend">
				<span class="add-on"><i class="icon-envelope"></i></span>
				<%= f.text_field :email %>
			</div>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :phone, 'Phone #', :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :phone, :class => 'input-small', :placeholder => 'xxx-xxx-xxxx' %>
		</div>
	</div>
</fieldset>

<fieldset>
	<legend>3. Administration User</legend>
	<%= f.fields_for :user do |builder| %>
		<%= render 'user_fields', :f =>  builder %>
	<% end %>
</fieldset>