<% if @user.new_record? %>
	<%= f.select :employee_id, @employees, {}, { :include_blank => true, :class => 'chosen-select' } %>
	<%= f.text_field :username, field_size: 'col-md-4' %>
<% else %>
	<%= f.static_control :employee_id do @user.employee.full_name end %>
	<%= f.static_control :username do @user.username end %>
<% end %>

<%= f.password_field :password, field_size: 'col-md-4', required: true %>
<%= f.password_field :password_confirmation, field_size: 'col-md-4' %>