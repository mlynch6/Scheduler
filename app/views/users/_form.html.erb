<% if @user.new_record? %>
	<%= f.select :employee_id, @employees, { :include_blank => true } %>
	<%= f.text_field :username %>
<% else %>
	<%= f.uneditable_text_field :employee_id, @user.employee.full_name %>
	<%= f.uneditable_text_field :username, @user.username %>
<% end %>
	
<%= f.password_field :password %>
<%= f.password_field :password_confirmation %>