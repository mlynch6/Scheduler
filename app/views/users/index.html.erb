<% provide(:title, 'Users') %>
<% provide(:header_current, 'Administration') %>

<h1>Users</h1>

<div class="row">
	<div class="row text-center">
		<% if allow? "users", "new" %>
			<%= new_button "Add User", new_user_path %>
		<% end %>
	</div>
	
	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Employee</th>
	  		<th>Username</th>
	  		<th style="width:70px;">&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @users.each do |user| %>
				<tr>
					<td><%= user.employee.name %></td>
					<td><%= user.username %></td>
					<td>
						<% if allow? "users", "edit" %>
							<%= edit_button nil, edit_user_path(user), :class => 'btn-small', :id => "edit_#{user.id}" %>
						<% end %>
						<% if allow? "users", "destroy" %>
							<%= delete_button nil, user, :class => 'btn-small', :id => "delete_#{user.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row">
		<div class="span10 offset2">
			<%= will_paginate(class: 'pagination',
						previous_label: "&laquo;",
			    	next_label: "&raquo;"
					)%>
		</div>
	</div>
	
	<% unless @users.length > 0 %>
		<div class="alert">No users are active. Click on 'Add User' to get started.</div>
	<% end %>
</div>