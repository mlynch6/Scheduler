<% provide(:title, 'Add User') %>
<% provide(:header_current, 'People') %>
<% provide(:sidebar_current, 'Users') %>

<div class="page-header">
  <h1>Users
    <small>Add</small>
  </h1>
</div>

<div class="row">
  <%= simple_form_for [@person, @user] do |f| %>
  	<%= show_error_messages @user %>
  	<%= render 'form', :f => f %>
	
    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', @person.profile, class: 'btn btn-link' if can? :show, @person.profile %>
  	<% end %>
  <% end %>
</div>