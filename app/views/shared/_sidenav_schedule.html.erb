<% class_active = " class=""active""" %>
<div class="well" style="padding: 8px 0;">
	<ul class="nav nav-list">
		<li class="nav-header">Schedule</li>
		<% if allow? "events", "index" %>
			<li<%= class_active if yield(:current) == "Events" %>><%= link_to "Daily Schedule", events_path %></li>
		<% end %>
		<% if allow? "company_classes", "new" %>
			<li<%= class_active if yield(:current) == "NewCompanyClass" %>><%= link_w_icon "New Company Class", new_company_class_path(date: @date), "plus" %></li>
		<% end %>
		<% if allow? "rehearsals", "new" %>
			<li<%= class_active if yield(:current) == "NewRehearsal" %>><%= link_w_icon "New Rehearsal", new_rehearsal_path(date: @date), "plus" %></li>
		<% end %>
		
		<li class="nav-header">Pieces</li>
		<% if allow? "pieces", "index" %>
			<li<%= class_active if yield(:current) == "Pieces" %>><%= link_to "Active Pieces", pieces_path %></li>
		<% end %>
		<% if allow? "pieces", "inactive" %>
			<li<%= class_active if yield(:current) == "InactivePieces" %>><%= link_to "Inactive Pieces", inactive_pieces_path %></li>
		<% end %>
		<% if allow? "pieces", "new" %>
			<li<%= class_active if yield(:current) == "NewPiece" %>><%= link_w_icon "Add Piece", new_piece_path, "plus" %></li>
		<% end %>
		
		<% if params[:piece_id] %>
			<ul class="nav nav-list">
				<li class="nav-header">Scenes</li>
				<% if allow? "scenes", "index" %>
					<li<%= class_active if yield(:current) == "Scenes" %>><%= link_to "Scenes", piece_scenes_path(@piece) %></li>
					<% end %>
				<% if allow? "scenes", "new" %>
					<li<%= class_active if yield(:current) == "NewScene" %>><%= link_w_icon "Add Scene", new_piece_scene_path(@piece), "plus" %></li>
				<% end %>
				
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-circle-arrow-down"></i>Download <b class="caret"></b></a>
			    <ul class="dropdown-menu">
			    	<li><%= link_to image_tag("file_extension_xls.png")+" Excel", piece_scenes_path(@piece, format: "xls") %></li>
						<li><%= link_to image_tag("file_extension_pdf.png")+" PDF", piece_scenes_path(@piece, format: "pdf") %></li>
			    </ul>
				</li>
				
				<li class="nav-header">Characters</li>
				<% if allow? "characters", "index" %>
					<li<%= class_active if yield(:current) == "Characters" %>><%= link_to "Characters", piece_characters_path(@piece) %></li>
				<% end %>
				<% if allow? "characters", "new" %>
					<li<%= class_active if yield(:current) == "NewCharacter" %>><%= link_w_icon "Add Character", new_piece_character_path(@piece), "plus" %></li>
				<% end %>
			</ul>
		<% end %>
		
	</ul>
</div>