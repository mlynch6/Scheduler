<% provide(:title, "#{@piece.name} | Edit Role") %>

<%= render 'pieces/detail', :piece => @piece %>

<%= form_for [@piece, @role], :html => { :class => 'form-horizontal' } do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<fieldset>
		<legend>Edit Role</legend>
		<%= render 'form', :f => f %>
	</fieldset>

	<%= render 'shared/form_submit', :f => f, :action_text => 'Update' %>
<% end %>