<% provide(:title, 'Edit Employee') %>
<% provide(:header_current, 'People') %>
<% provide(:sidebar_current, 'Employees') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Employees
       <small>Edit</small>
     </h1>
  </div>
  <%= render 'employees/tools_menu' %>
</div>

<div class="row">
  <%= simple_form_for @employee_form, url: employee_path(@employee), method: :put do |f| %>
  	<%= show_error_messages @employee_form %>
  	<%= render 'form', :f => f %>
	
    <%= form_actions do %>
      <%= f.submit 'Update Employee', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', employee_path(@employee), class: 'btn btn-link' %>
    <% end %>
  <% end %>
</div>