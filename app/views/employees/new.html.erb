<% provide(:title, 'Add Employee') %>
<% provide(:header_current, 'Employees') %>
<% provide(:current, 'NewEmployee') %>

<h1>Add Employee</h1>

<div class="span9">
	<%= form_for @employee, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.error_messages %>
		<%= render 'form', :f => f %>
		<%= f.submit 'Create', :class => 'btn btn-primary' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>