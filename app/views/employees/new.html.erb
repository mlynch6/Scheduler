<% provide(:title, 'Add Employee') %>
<% provide(:header_current, 'People') %>
<% provide(:sidebar_current, 'Employees') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Employees
       <small>Add</small>
     </h1>
  </div>
  <%= render 'employees/tools_menu' %>
</div>

<div class="row">
  <%= form_for @employee_form, url: employees_path, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
  	<%= f.error_messages %>
  	<%= render 'form', :f => f %>
	
  	<%= f.submit_group do %>
  		<%= f.submit_primary 'Create' %>
      <%= link_to 'Cancel', employees_path, class: 'btn btn-link' %>
  	<% end %>
  <% end %>
</div>