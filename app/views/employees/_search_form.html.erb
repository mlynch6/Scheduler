<div class="search-row hidden-print">
  <%= form_tag employees_path, method: 'get', class: 'form-inline', id: 'employee_search' do %>
		<div class="form-group">
      <%= label :status, 'Status', class: 'sr-only' %>
      <%= select_tag :status,
          options_for_select(Lovs::SEARCH_ACTIVE, params[:status]),
          prompt: 'All',
          class: 'form-control submit-on-change'
        %>
    </div>
		<div class="form-group">
      <%= label :fname, 'First Name', class: 'sr-only' %>
      <%= text_field_tag :fname, 
            params[:fname], 
            class: 'form-control',
            placeholder: 'First Name' %>
    </div>
		<div class="form-group">
      <%= label :lname, 'Last Name', class: 'sr-only' %>
      <%= text_field_tag :lname, 
            params[:lname], 
            class: 'form-control',
            placeholder: 'Last Name' %>
    </div>
    <%= content_tag :button, content_tag(:span, nil, class: 'glyphicon glyphicon-search'), 
          name: nil, 
          class: 'btn btn-info',
          title: 'Search' %>
  <% end %>
</div>