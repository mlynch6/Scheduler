<%= f.input :first_name,
      required: true %>
<%= f.input :middle_name %>
<%= f.input :last_name,
      required: true %>
<%= f.input :suffix, wrapper: :horizontal_small %>
<%= f.input :active, as: :radio_buttons,
      collection: [['Active', true], ['Inactive', false]],
      label_html: { for: 'employee_active_true'} %>
<%= f.input :job_title %>
<%= f.input :gender, as: :radio_buttons,
      collection: Person::GENDERS,
      label_html: { for: 'employee_gender_female'} %>
<%= f.input :birth_date, as: :date_picker %>
<%= f.input :email, as: :email_prepend %>