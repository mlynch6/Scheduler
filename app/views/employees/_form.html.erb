<%= f.text_field :first_name %>
<%= f.text_field :last_name %>
<%= f.select :role, Employee::ROLES %>
<%= f.email_field :email %>

<% unless @employee.new_record? %>
<div class="form-group">
  <label class="col-md-3 control-label required" for="employee_active_true">Status</label>
  <div class="col-md-9">
    <%= f.radio_button :active, true, label: "Active", inline: true %>
    <%= f.radio_button :active, false, label: "Inactive", inline: true %>
  </div>
</div>
<% end %>