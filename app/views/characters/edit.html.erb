<% provide(:title, "#{@piece.name} | Edit Character") %>
<% provide(:header_current, 'Scheduling') %>
<% provide(:current, 'EditCharacter') %>

<h1>Edit Character for <%= @piece.name %></h1>

<div class="span9">
	<%= form_for @character, :html => { :class => 'form-horizontal' } do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
		
		<%= render 'form', :f => f %>
		<%= render 'shared/form_submit', :f => f, :action_text => 'Update' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>