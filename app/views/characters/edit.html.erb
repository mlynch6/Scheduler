<% provide(:title, "#{@piece.name} | Edit Character") %>
<% provide(:header_current, 'Scheduling') %>
<% provide(:current, 'EditCharacter') %>

<h1>Edit Character for <%= @piece.name %></h1>

<div class="span9">
	<%= form_for @character, :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.error_messages %>
		<%= render 'form', :f => f %>
		<%= f.submit 'Update', :class => 'btn btn-primary' %>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>