<%= f.input :name %>
<%= f.input :gender, wrapper: :horizontal_small,
      collection: ['Male', 'Female'],
      include_blank: '-- Unspecified --' %>

<div class="form-group">
  <div class="col-md-offset-3 col-md-2">
    <%= f.check_box :is_child %> Child
  </div>
  <div class="col-md-2">
  <%= f.check_box :animal %> Animal
  </div>
  <div class="col-md-3">
  <%= f.check_box :speaking %> Speaking
  </div>
</div>

