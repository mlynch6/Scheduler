<% provide(:title, "#{@piece.name} | Add Character") %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Pieces') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>
      <%= @piece.name %>
      <small>Add Character</small>
    </h1>
  </div>
  <%= render 'characters/tools_menu' %>
</div>

<div class="row">
  <%= form_for [@piece, @character], :builder => BootstrapFormBuilder, :html => { :class => 'form-horizontal' } do |f| %>
  	<%= f.error_messages %>
  	<%= render 'form', :f => f %>
	
  	<%= f.submit_group do %>
  		<%= f.submit_primary 'Create' %>
  	<% end %>
  <% end %>
</div>