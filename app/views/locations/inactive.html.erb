<% provide(:title, 'Inactive Locations') %>
<% provide(:header_current, 'Administration') %>

<h1>Inactive Locations</h1>

<div class="row">
	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Name</th>
	  		<th style="width:70px;">&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @locations.each do |location| %>
				<tr>
					<td><%= location.name %></td>
					<td>
						<% if allow? "locations", "activate" %>
							<%= activate_button nil, activate_location_path(location), :class => 'btn-small', :id => "activate_#{location.id}" %>
						<% end %>
						<% if allow? "locations", "destroy" %>
							<%= delete_button nil, location, :class => 'btn-small', :id => "delete_#{location.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row">
		<div class="span10 offset2">
			<%= will_paginate(class: 'pagination',
						previous_label: "&laquo;",
			    	next_label: "&raquo;"
					)%>
		</div>
	</div>

	<% unless @locations.length > 0 %>
		<div class="alert">No locations are inactive.</div>
	<% end %>
</div>