<% provide(:title, 'Inactive Locations') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Inactive Locations') %>

<div class="page-header">
	<h1><%= yield(:title) %></h1>
</div>

<% if @locations.length > 0 %>
	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Name</th>
	  		<th style="width:70px;">&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @locations.each do |location| %>
				<tr>
					<td><%= location.name %></td>
					<td>
						<% if allow? "locations", "activate" %>
							<%= activate_button nil, activate_location_path(location), :class => 'btn-xs', :id => "activate_#{location.id}" %>
						<% end %>
						<% if allow? "locations", "destroy" %>
							<%= delete_button nil, location, :class => 'btn-xs', :id => "delete_#{location.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate(class: 'pagination', previous_label: "&laquo;", next_label: "&raquo;")%>
	
<% else %>
	<p>No locations are inactive.</p>
<% end %>