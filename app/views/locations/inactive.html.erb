<% provide(:title, 'Inactive Locations') %>
<h1>Inactive Locations</h1>

<%= render 'filter', :status => "inactive" %>

<table class="table table-striped">
	<thead>
  	<tr>
  		<th>Name</th>
  		<th>&nbsp;</th>
  	</tr>
  </thead>
  <tbody>
  	<% @locations.each do |location| %>
			<tr>
				<td><%= location.name %></td>
				<td>
					<% if allow? "locations", "activate" %>
						<%= link_to 'Activate', activate_location_path(location), :class => 'btn btn-mini btn-success', :id => "activate_#{location.id}" %>
					<% end %>
					<% if allow? "locations", "destroy" %>
						<%= link_to 'Delete', location, method: :delete, confirm: "Delete?", :class => 'btn btn-mini btn-danger', :id => "delete_#{location.id}" %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% unless @locations.length > 0 %>
	<div class="alert">No records found</div>
<% end %>

<div class="row">
	<div class="span10 offset2">
		<%= will_paginate(class: 'pagination',
					previous_label: "&laquo;",
		    	next_label: "&raquo;"
				)%>
	</div>
</div>