<% provide(:title, 'Add Location') %>
<% provide(:header_current, 'Administration') %>
<% provide(:current, 'NewLocation') %>

<h1>Add Location</h1>

<div class="span9">
	<%= form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
		
		<%= render 'form', :f => f %>
		<%= render 'shared/form_submit', :f => f, :action_text => 'Create' %>
	<% end %>
</div>

<div class="span3">
	<div class="alert alert-info"><i class="icon-info-sign"></i> 
		Add the locations of your rehearsals, performances, and costume fittings.
	</div>

	<%= render 'shared/subnav' %>
</div>