<% provide(:title, 'Active Locations') %>
<% provide(:header_current, 'Administration') %>
<% provide(:current, 'Locations') %>

<h1>Active Locations</h1>

<div class="span9">
	<table class="table table-striped">
		<thead>
	  	<tr>
	  		<th>Name</th>
	  		<th>&nbsp;</th>
	  	</tr>
	  </thead>
	  <tbody>
	  	<% @locations.each do |location| %>
				<tr>
					<td><%= location.name %></td>
					<td>
						<% if allow? "locations", "edit" %>
							<%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-small', :id => "edit_#{location.id}" %>
						<% end %>
						<% if allow? "locations", "inactivate" %>
							<%= link_to 'Inactivate', inactivate_location_path(location), :class => 'btn btn-small btn-warning', :id => "inactivate_#{location.id}" %>
						<% end %>
						<% if allow? "locations", "destroy" %>
							<%= link_to 'Delete', location, method: :delete, confirm: "Delete?", :class => 'btn btn-small btn-danger', :id => "delete_#{location.id}" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row">
		<div class="span10 offset2">
			<%= will_paginate(class: 'pagination',
						previous_label: "&laquo;",
			    	next_label: "&raquo;"
					)%>
		</div>
	</div>
	
	<% unless @locations.length > 0 %>
		<div class="alert">No locations are active. Click on 'Add Location' to get started.</div>
	<% end %>
</div>

<div class="span3">
	<%= render 'shared/subnav' %>
</div>