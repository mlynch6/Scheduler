<% provide(:title, 'Edit Location') %>
<% provide(:header_current, 'Setup') %>
<% provide(:sidebar_current, 'Locations') %>

<div class="row">
  <div class="page-header col-md-11">
  	 <h1>Locations
      <small>Edit</small>
    </h1>
  </div>
  <%= render 'locations/tools_menu' %>
</div>

<div class="row">
  <%= simple_form_for @location do |f| %>
  	<%= show_error_messages @location %>
    <%= render 'form', :f => f %>

    <%= form_actions do %>
      <%= f.button :submit %>
      <%= link_to 'Cancel', locations_path, class: 'btn btn-link' %>
    <% end %>
  <% end %>
</div>