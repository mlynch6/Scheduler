<% klass = ' class="active"'.html_safe %>
<div class="panel panel-default mash-sidebar hidden-print" role="complementary">
	<div class="panel-heading">
		<h3 class="panel-title"><%= content_tag(:span, nil, class: 'glyphicon glyphicon-search')%> Search</h3>
	</div>
	
  <div class="panel-body">
    <h4>Status</h4>
    <ul class="list-unstyled mash-filter">
		  <li<%= klass if params[:status] == "active" %>>
        <%= link_to "Active", locations_path(status: 'active') %>
      </li>
			<li<%= klass if params[:status] == "inactive" %>>
        <%= link_to "Inactive", locations_path(status: 'inactive') %>
      </li>
			<li<%= klass if !params.include?(:status) || (params[:status] != "active" && params[:status] != "inactive") %>>
        <%= link_to "All", locations_path %>
      </li>
		</li>
	</ul>
  </div>
</div>